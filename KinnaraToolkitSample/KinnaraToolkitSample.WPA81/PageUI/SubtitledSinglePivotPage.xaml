<k:BasePage
    x:Class="KinnaraToolkitSample.PageUI.SubtitledSinglePivotPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:k="using:Kinnara.Xaml.Controls"
    xmlns:local="using:KinnaraToolkitSample.PageUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Style="{StaticResource CommonPageStyle}">

    <k:PageUI Title="TITLE"
              Subtitle="Subtitle"
              SubtitleVisibility="Visible"
              Header="header">
        <TextBlock Text="{Binding Paragraphs, Source={StaticResource LoremIpsum}}"
                   Style="{StaticResource LargeHighLoose}"
                   TextWrapping="Wrap"/>
    </k:PageUI>
</k:BasePage>
